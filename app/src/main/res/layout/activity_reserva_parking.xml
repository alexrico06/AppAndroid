<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservaParking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_vector_test"
                android:onClick="botonAtras" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="RESERVA TU PLAZA"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedor_vehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            -->

            <TextView
                android:id="@+id/textViewAlias2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Seleccione Vehciulo Por Alias" />

            <Spinner
                android:id="@+id/alias_spinner2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedor_plazas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Plaza:" />

            <Spinner
                android:id="@+id/spinner_plazas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aparcamiento:" />

            <EditText
                android:id="@+id/direccionParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutHourMinute"
                android:layout_centerInParent="true"
                android:amPmBackgroundColor="#500126"
                android:headerBackground="#565466"
                android:numbersBackgroundColor="#57e326"
                android:numbersSelectorColor="#675543"
                android:numbersTextColor="#995394"
                android:textColorPrimary="#359875"
                android:textColorSecondary="#897530"
                android:timePickerMode="clock" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reservarPlaza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RESERVAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>